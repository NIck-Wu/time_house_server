<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="BannerMapper">

    <!--查询结果列 -->
    <sql id="selectBannerCloumns">
        id,
        bannerCode,
        bannerName,
        bannerUrl,
        weight,
        isMainPic,
        creatTime,
        lastUpdate
    </sql>

    <!-- 新增-->
    <insert id="save" parameterType="com.domain.dto.BannerDto" useGeneratedKeys="true" keyProperty="id">
        insert into banner(
          id,
          bannerCode,
          bannerName,
          bannerUrl,
          weight,
          isMainPic,
          creatTime,
          lastUpdate
        ) values (
          #{id},
          #{bannerCode},
          #{bannerName},
          #{bannerUrl},
          #{weight},
          #{isMainPic},
          #{creatTime},
          #{lastUpdate}
        )
    </insert>

    <!--根据主键删除-->
    <delete id="deleteById" parameterType="com.domain.dto.BannerDto">
		delete from banner
		where id = #{id}
	</delete>

    <!-- 修改 -->
    <update id="editById" parameterType="com.domain.dto.BannerDto">
        update banner set
        <if test="id !=null">
            id = #{id},
        </if>
        <if test="bannerCode !=null and bannerCode != ''">
            bannerCode = #{bannerCode},
        </if>
        <if test="bannerName !=null and bannerName != ''">
            bannerName = #{bannerName},
        </if>
        <if test="bannerUrl !=null and bannerUrl != ''">
            bannerUrl = #{bannerUrl},
        </if>
        <if test="weight !=null">
            weight = #{weight},
        </if>
        <if test="isMainPic !=null and isMainPic != ''">
            isMainPic = #{isMainPic},
        </if>
        <if test="creatTime !=null">
            <![CDATA[creatTime = #{creatTime},]]>
        </if>
        <if test="lastUpdate !=null">
            <![CDATA[lastUpdate = #{lastUpdate},]]>
        </if>
        id = #{id}

        where id = #{id}
    </update>

    <!-- 通过ID获取数据 -->
    <select id="findById" parameterType="com.domain.dto.BannerDto" resultType="com.domain.dto.BannerDto">
        select
        <include refid="selectBannerCloumns" />
        from  banner
        where id = #{id}
    </select>

    <!-- 列表查询 -->
    <select id="list" parameterType="com.domain.dto.BannerDto" resultType="com.domain.dto.BannerDto">
        select
        <include refid="selectBannerCloumns" />
        from  banner
        <!--查询条件-->
        where 1 = 1
        <if test="id !=null">
            and id = #{id}
        </if>
        <if test="bannerCode !=null and bannerCode != ''">
            and bannerCode = #{bannerCode}
        </if>
        <if test="bannerName !=null and bannerName != ''">
            and bannerName = #{bannerName}
        </if>
        <if test="bannerUrl !=null and bannerUrl != ''">
            and bannerUrl = #{bannerUrl}
        </if>
        <if test="weight !=null">
            and weight = #{weight}
        </if>
        <if test="isMainPic !=null and isMainPic != ''">
            and isMainPic = #{isMainPic}
        </if>
        <if test="creatTime !=null">
            and <![CDATA[creatTime = #{creatTime}]]>
        </if>
        <if test="lastUpdate !=null">
            and <![CDATA[lastUpdate = #{lastUpdate}]]>
        </if>
    </select>

    <!-- 分页查询 -->
    <select id="page" parameterType="com.domain.dto.BannerDto" resultType="com.domain.dto.BannerDto">
        select
        <include refid="selectBannerCloumns" />
        from  banner
        <!--查询条件-->
        where 1 = 1
        <if test="id !=null">
            and id = #{id}
        </if>
        <if test="bannerCode !=null and bannerCode != ''">
            and bannerCode = #{bannerCode}
        </if>
        <if test="bannerName !=null and bannerName != ''">
            and bannerName = #{bannerName}
        </if>
        <if test="bannerUrl !=null and bannerUrl != ''">
            and bannerUrl = #{bannerUrl}
        </if>
        <if test="weight !=null">
            and weight = #{weight}
        </if>
        <if test="isMainPic !=null and isMainPic != ''">
            and isMainPic = #{isMainPic}
        </if>
        <if test="creatTime !=null">
            and <![CDATA[creatTime = #{creatTime}]]>
        </if>
        <if test="lastUpdate !=null">
            and <![CDATA[lastUpdate = #{lastUpdate}]]>
        </if>
    </select>
</mapper>